{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Web Extension in VS Code",
      "type": "extensionHost",
      "debugWebWorkerHost": true,
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionDevelopmentKind=web"
      ],
      "outFiles": ["${workspaceRoot}/out/*.js"],
      "preLaunchTask": {
        "type": "npm",
        "script": "esbuild-watch"
      }
    }
  ]
}
